<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="rootPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720" prefWidth="1280" 
      style="-fx-background-color: snow;" stylesheets="@../styles/lapanganStyle.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kelompok4.controllers.AddPageController">
   <children>

      <fx:include source="sidebarUI.fxml" />

      <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
         <children>

            <fx:include source="headerUI.fxml" />

            <VBox spacing="10.0" styleClass="contentContainer" VBox.vgrow="ALWAYS">
               <children>
                  <Label styleClass="lapanganTitle" text="Penyewaan Lapangan" />
                  <VBox>
                     <children>
                        <Label style="-fx-font: 14px Helvetica" text="Nama Lapangan" />
                        <TextField fx:id="namaInput" promptText="Nama" style="-fx-font: 16px Helvetica; -fx-padding: 10px" />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label style="-fx-font: 14px Helvetica" text="Harga Lapangan" />
                        <TextField fx:id="hargaInput" promptText="Harga" style="-fx-font: 16px Helvetica; -fx-padding: 10px" />
                     </children>
                  </VBox>
                  <HBox>
                     <children>
                        <Button prefWidth="80.0" text="Cancel" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button onAction="#saveButtonClicked" prefWidth="80.0" text="Save" />
                     </children>
                  </HBox>
               </children>

               <VBox.margin>
                  <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         
         </children>
      </VBox>

   </children>
</HBox>
