<?import javafx.scene.layout.VBox?>

<HBox fx:id="rootPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720" prefWidth="1280" style="-fx-background-color: snow;" stylesheets="@../styles/lapanganStyle.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kelompok4.controllers.LapanganController">
   <children>

      <fx:include source="sidebarUI.fxml" />
      
      <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
         <children>

            <fx:include source="headerUI.fxml" />
         
            <VBox spacing="10.0" styleClass="contentContainer" VBox.vgrow="ALWAYS">
               <children>
      
                  <Label styleClass="lapanganTitle" text="Sistem Informasi Penyewaan Lapangan Futsal" />
      
                  <TableView fx:id="table" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="idCol" style="-fx-alignment: CENTER;" styleClass="tableColumn" text="ID" />
                        <TableColumn fx:id="namaCol" styleClass="tableColumn" text="Nama Lapangan" />
                        <TableColumn fx:id="hargaCol" styleClass="tableColumn" text="Harga per Sesi (Rp)" />
                     </columns>
      
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
      
                  <HBox spacing="10.0" VBox.vgrow="NEVER">
                     <children>
                        <Button fx:id="tambahButton" onAction="#toAddPage" prefWidth="100" styleClass="button" text="Tambah" />
                        <Button fx:id="editButton" onAction="#toAddPage" prefWidth="100" styleClass="button" text="Edit" />
                        <Button fx:id="hapusButton" onAction="#deleteRowLapangan" prefWidth="100" styleClass="button" text="Hapus" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="sewaButton" prefWidth="100" styleClass="button" text="Sewa" />
                     </children>
                  </HBox>
      
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
               </VBox.margin>
            </VBox>
         </children>
      </VBox>

   </children>
</HBox>
