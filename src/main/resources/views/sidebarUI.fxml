<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="rootPane" alignment="TOP_CENTER" minWidth="200.0" prefWidth="200.0" spacing="20.0" styleClass="sidebarContainer" stylesheets="@../styles/sidebarStyle.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controllers.SidebarController">
   <padding>
      <Insets bottom="20.0" top="20.0" />
   </padding>
   <children>
      <ImageView fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../../img/logo.png" />
         </image>
      </ImageView>

      <Separator>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Separator>

      <Button fx:id="daftarLapangan" alignment="TOP_LEFT" onAction="#toDaftarLapangan" prefWidth="Infinity" styleClass="button" text="Daftar Lapangan">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button fx:id="tambahLapangan" alignment="TOP_LEFT" onAction="#toAddPage" prefWidth="Infinity" styleClass="buttonA" text="Tambah Lapangan">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button fx:id="sewaLapangan" alignment="TOP_LEFT" onAction="#toRentPage" prefWidth="Infinity" styleClass="button" text="Sewa Lapangan">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button fx:id="daftarAkun" alignment="TOP_LEFT" onAction="#toAccountsUI" prefWidth="Infinity" styleClass="button" text="Daftar Akun">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>

      <Region VBox.vgrow="ALWAYS" />
      <Separator />
      <Button alignment="TOP_LEFT" onAction="#logout" prefWidth="Infinity" text="Sign Out">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
   </children>
</VBox>
